<h2>New book</h2>

<form class="new_book" id="new_book" action="/books" accept-charset="UTE-8" method=post>
  <input name="ute-8" type="hidden">
  
    <% if @book.errors.any? %>
      <%= @book.errors.count %>errors prohibited this book from being saved:
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <%end%>
      </ul>
    <%end%>
    
    <%= form_with model:@book, url:'/books',method: :post do |f| %>
      
      <h4>本のタイトル</h4>
      <%=f.text_field :title %>
      
      <h5>感想</h5>
      <%=f.text_area :body %>
      
      <%=f.submit 'Create Book' %>
    <%end%>
  </form>